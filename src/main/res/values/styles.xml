<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="StickyText">
		<item name="android:textColor">@color/cc0</item>
		<item name="android:textSize">@dimen/err_sticky_general_text_sz</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="Sticky">
		<item name="android:layout_marginLeft">@dimen/err_sticky_layout_outer_margin</item>
		<item name="android:layout_marginRight">@dimen/err_sticky_layout_outer_margin</item>
		<item name="android:background">@color/bg_err</item>
		<item name="android:visibility">gone</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">@dimen/err_sticky_general_margin_padding</item>
	</style>

	<style name="Sticky.AirplaneMode">
		<item name="android:layout_marginTop">@dimen/err_sticky_general_margin_padding</item>
		<item name="android:layout_marginLeft">@dimen/err_sticky_general_margin_padding</item>
		<item name="android:layout_marginRight">@dimen/err_sticky_general_margin_padding</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:visibility">visible</item>
	</style>

	<style name="Sticky.Setting">
		<item name="android:layout_marginRight">@dimen/err_sticky_general_margin_padding</item>
		<item name="android:background">@color/selector_bg_btn</item>
		<item name="android:contentDescription">@string/app_name</item>
		<item name="android:src">@drawable/btn_settings_airplane_mode</item>
		<item name="android:visibility">visible</item>
	</style>

	<style name="ErrorView">
		<item name="android:background">@color/bg_err</item>
	</style>

	<style name="ErrorViewText">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="ErrorViewTextButton">
	</style>

	<style name="ErrorViewTextView" parent="@style/ErrorViewText">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<style name="ErrorSymbol">
		<item name="android:layout_width">60dp</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:src">@drawable/ic_err_no_net</item>
	</style>

    <!--External app-list-view.-->
    <style name="ExApps"/>

    <style name="ExApps.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="ExApps.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Drawer_Item_Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="Drawer_Item_Text_Small" parent="@style/Drawer_Item_Text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>