<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="com.chopping">

	<application
			android:allowBackup="true"
			android:label="@string/app_name"
			android:icon="@drawable/ic_launcher">
		<activity
				android:name=".activities.ErrorHandlerActivity"
				android:label="@string/app_name"
				android:theme="@style/ChoppingTheme" />
        <activity
            android:name=".activities.BrightnessRefreshActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.Transparent"
            android:taskAffinity="com.chopping.brightness.REFRESH"
            android:excludeFromRecents="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.chopping.brightness.action.REFRESH" />

            </intent-filter>
        </activity>


        <!--Event handler for reject incoming calls.-->
        <receiver android:name=".utils.IncomingCallReceiver" android:enabled="false">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name=".application.InstalledAppReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>

                <data android:scheme="package"/>
            </intent-filter>
        </receiver>
	</application>

</manifest>
